@model ConviBLL.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input asp-for="RememberMe" type="checkbox" />
        <label asp-for="RememberMe">Remember me</label>
    </div>
    <button type="submit">Login</button>
</form>

<a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google" })">Login with Google</a>
<a href="@Url.Action("ExternalLogin", "Account", new { provider = "Facebook" })">Login with Facebook</a>


